<p id="notice"><%= notice %></p>

<h1>Listing Childminders</h1>
<%= search_form_for @search do |f|%>
<div class="field">

  <%= f.label :location_cont %>
  <%= f.search_field :location_cont %>

  <%= f.label :no_of_children_cont %>
   <%= f.search_field :email_cont %>

   <%= f.label :rating_cont %>
    <%= f.search_field :rating_cont %>

</div>
<div class="action"><%= f.submit  "search"%></div>

<% end %>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>Name</th>
      <th><%=sort_link @search, :no_of_children, "No of children"%></th>
      <th>Phone number</th>
      <th>Email</th>
      <th><%=sort_link @search, :location, "Location"%></th></th>
      <th><%=sort_link @search, :rating, "Rating"%></th>
      <th>About me</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @childminders.each do |childminder| %>
      <tr>
        <td><%= image_tag childminder.childminder_image.thumb.url %></td>
        <td><%= childminder.name %></td>
        <td><%= childminder.no_of_children %></td>
        <td><%= childminder.phone_number %></td>
        <td><%= truncate(childminder.email, :length => 15) %></td>
        <td><%= childminder.location %></td>
        <td><%= childminder.rating %></td>
        <td><%= truncate(childminder.about_me, :length => 15) %></td>

        <td><%= link_to "Add Friend", friendships_path(:friend_id => childminder), :method => :post %></td>
        <td><%= link_to 'Show', childminder %></td>
        <td><%= link_to 'Edit', edit_childminder_path(childminder) %></td>
        <td><%= link_to 'Destroy', childminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

