<h2>Added by Users</h2>
<ul>
  <%  @childminder.friendships.each do |friendship| %>
    <li>
      <%= friendship.user.name %>
      (<%= link_to "remove", friendship, :method => :delete %>)
    </li>
  <% end %>
</ul>



