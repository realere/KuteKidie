<p id="notice"><%= notice %></p>

<h1>Listing Nannies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>No of children</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Location</th>
      <th>Rating</th>
      <th>About me</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nannies.each do |nanny| %>
      <tr>
        <td><%= nanny.name %></td>
        <td><%= nanny.age %></td>
        <td><%= nanny.no_of_children %></td>
        <td><%= nanny.phone_number %></td>
        <td><%= nanny.email %></td>
        <td><%= nanny.location %></td>
        <td><%= nanny.rating %></td>
        <td><%= nanny.about_me %></td>
        <td><%= nanny.category_id %></td>
        <td><%= link_to 'Show', nanny %></td>
        <td><%= link_to 'Edit', edit_nanny_path(nanny) %></td>
        <td><%= link_to 'Destroy', nanny, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nanny', new_nanny_path %>
