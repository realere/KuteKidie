<p id="notice"><%= notice %></p>

<h1>Listing Babysitters</h1>
<%= search_form_for @search do |f|%>
<div class="search">

  <%= f.label :location_cont %>
  <%= f.search_field :location_cont %>

  <%= f.label :no_of_children_cont %>
   <%= f.search_field :email_cont %>

   <%= f.label :rating_cont %>
    <%= f.search_field :rating_cont %>

</div>
<div class="action"><%= f.submit  "search"%></div>

<% end %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th><%=sort_link @search, :no_of_children, "No of children"%></th>
      <th>Phone number</th>
      <th>Email</th>
      <th><%=sort_link @search, :location, "Location"%></th>
      <th><%=sort_link @search, :rating, "Rating"%></th>
      <th>About me</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @babysitters.each do |babysitter| %>
      <tr>

        <td><%= babysitter.name %></td>
        <td><%= babysitter.no_of_children %></td>
        <td><%= babysitter.phone_number %></td>
        <td><%= truncate(babysitter.email, :length => 15) %></td>
        <td><%= babysitter.location %></td>
        <td><%= babysitter.rating %></td>
        <td><%= truncate(babysitter.about_me, :length => 15) %></td>

        <td><%= link_to "Add Friend", friendships_path(:friend_id => babysitter), :method => :post %></td>
       
        <td><%= link_to 'Show', babysitter %></td>
        <td><%= link_to 'Edit', edit_babysitter_path(babysitter) %></td>
        <td><%= link_to 'Destroy', babysitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Babysitter', new_babysitter_path %>
