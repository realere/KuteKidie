<p id="notice"><%= notice %></p>

<h1>Listing Babysitters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>No of children</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Location</th>
      <th>Rating</th>
      <th>About me</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @babysitters.each do |babysitter| %>
      <tr>
        <td><%= babysitter.name %></td>
        <td><%= babysitter.no_of_children %></td>
        <td><%= babysitter.phone_number %></td>
        <td><%= truncate(babysitter.email, :length => 15) %></td>
        <td><%= babysitter.location %></td>
        <td><%= babysitter.rating %></td>
        <td><%= truncate(babysitter.about_me, :length => 15) %></td>
        <td><%= link_to 'Show', babysitter %></td>
        <td><%= link_to 'Edit', edit_babysitter_path(babysitter) %></td>
        <td><%= link_to 'Destroy', babysitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

